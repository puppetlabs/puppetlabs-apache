<IfModule mod_userdir.c>
<% if @disable_root -%>
  UserDir disabled root
<% end -%>
  UserDir <%= @_path %>

  <Directory "<%= @_path %>">
    AllowOverride <%= @overrides.join(' ') %>
    Options <%= @options.join(' ') %>
    <Limit GET POST OPTIONS>
      Require all granted
    </Limit>
    <LimitExcept GET POST OPTIONS>
      Require all granted
    </LimitExcept>
  </Directory>
</IfModule>
