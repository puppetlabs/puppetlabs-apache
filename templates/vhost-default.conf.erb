NameVirtualHost <%= vhost_name %>:<%= port %>
<VirtualHost <%= vhost_name %>:<%= port %>>
  ServerName <%= srvname %>

<% if serveradmin -%>
  ServerAdmin <%= serveradmin %>
<% end %>
<% if serveraliases.is_a? Array -%>
<% serveraliases.each do |name| -%><%= "  ServerAlias #{name}\n" %><% end -%>

<% elsif serveraliases != '' -%>
<%= "  ServerAlias #{serveraliases}" %>

<% end -%>
<% if requestheader -%>
<% if requestheader.is_a? Array -%>
<% requestheader.each do |request_statement| -%>
  RequestHeader <%= request_statement %>
<% end -%>
<% elsif requestheader != '' -%>
  RequestHeader <%= requestheader %> 
<% end -%>

<% end -%>
  DocumentRoot <%= docroot %>
  <Directory <%= docroot %>>
    Options <%= options %>
    AllowOverride <%= Array(override).join(' ') %>
    Order allow,deny
    allow from all
  </Directory>
  ErrorLog <%= logroot %>/<%= name %>_error.log
  LogLevel warn
<% if access_log -%>
  CustomLog <%= logroot %>/<%= name %>_access.log combined
<% end -%>
  ServerSignature Off
</VirtualHost>

