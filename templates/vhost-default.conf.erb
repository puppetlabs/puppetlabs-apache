NameVirtualHost <%= vhost_name %>:<%= port %>
<VirtualHost <%= vhost_name %>:<%= port %>>
  ServerName <%= srvname %>
<% if serveradmin %>
  ServerAdmin <%= serveradmin %>
<% end %>
<% if serveraliases.is_a? Array -%>
<% if serveraliases -%>
<% serveraliases.each do |name| -%><%= "  ServerAlias #{name}\n" %><% end -%>
<% end -%>
<% elsif serveraliases != '' -%>
<%= "  ServerAlias #{serveraliases}" -%>
<% end -%>
  DocumentRoot <%= docroot %>
  <Directory <%= docroot %>>
    Options <%= options %>
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory>
  LogLevel warn
  ErrorLog <%= logroot %>/<%= name %>/<%= name %>_error.log
  CustomLog <%= logroot %>/<%= name %>/<%= name %>_access.log combined
  ServerSignature Off
<% if ssl -%>
  SSLEngine on
  SSLCertificateFile    <%= ssl_cert %>
  SSLCertificateKeyFile <%= ssl_key %>
<% end -%>
<% if auth -%>
  <Location />
    AuthType basic
    AuthName "Restricted Site"
    Require valid-user
    AuthBasicProvider file
    AuthUserFile <%= auth %>
  </Location>
<% end -%>
</VirtualHost>

