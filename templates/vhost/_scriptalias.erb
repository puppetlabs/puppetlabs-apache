<% if @scriptalias -%>

  ## Script alias directives
  ScriptAlias <%= @scriptlocation %> "<%= @scriptalias %>/"
  <Directory "<%= @scriptalias %>">
    AllowOverride None
    Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
    Order allow,deny
    Allow from all
<% if @ssl -%>
    SSLOptions +StdEnvVars
<% end -%>
  </Directory>
<% end -%>
